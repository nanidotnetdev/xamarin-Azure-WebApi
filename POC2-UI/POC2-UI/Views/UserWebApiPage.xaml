<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="POC2_UI.Views.UserWebApiPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="Clicked_SaveUser"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="User Name"></Label>
            <Entry Text="{Binding User.Username}"></Entry>
            <Label Text="Employee Name"></Label>
            <Entry Text="{Binding User.EmpName}"></Entry>
            <Label Text="Password"></Label>
            <Entry IsPassword="True" Text="{Binding User.Password}"></Entry>
            <Label Text="Email"></Label>
            <Entry Text="{Binding User.Email}"></Entry>
            <Label Text="Phone"></Label>
            <Entry Text="{Binding User.Phone}"></Entry>
        </StackLayout>


    </ContentPage.Content>
</ContentPage>